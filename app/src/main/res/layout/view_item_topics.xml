<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_topic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="@dimen/margin_card_medium_2">

    <ImageView
        android:id="@+id/iv_topic_bg"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/lotus"
        android:scaleType="centerCrop"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_topic_images"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/meditation_image"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basics"
            android:layout_toRightOf="@id/iv_topic_images"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_topic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_topic_title"
            android:layout_toRightOf="@id/iv_topic_images"
            android:text="@string/topic_description"
            android:textColor="#FFFFFf"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>